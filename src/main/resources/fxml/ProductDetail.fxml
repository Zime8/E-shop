<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Spinner?>

<VBox fx:controller="org.example.controllers.ProductDetailController"
      xmlns:fx="http://javafx.com/fxml"
      spacing="18"
      alignment="TOP_CENTER"
      style="-fx-background-color: #fff;
             -fx-border-color: #d32f2f;
             -fx-border-width: 2;
             -fx-background-radius: 18;
             -fx-border-radius: 18;
             -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.12), 10, 0, 0, 4);"
      prefWidth="400"
      prefHeight="400">

    <padding>
        <Insets top="25" right="28" bottom="28" left="28"/>
    </padding>

    <HBox alignment="TOP_RIGHT">
        <Button fx:id="closeBtn"
                text="❌"
                onAction="#onClose"
                style="-fx-background-color: transparent;
                       -fx-text-fill: #d32f2f;
                       -fx-font-size: 18;
                       -fx-font-weight: bold;
                       -fx-cursor: hand;
                       -fx-padding: 0;"/>
    </HBox>

    <ImageView fx:id="bigPhoto" fitWidth="260"  fitHeight="200" preserveRatio="true"
               style="-fx-background-color: #f8f8f8; -fx-border-radius: 14; -fx-background-radius: 14;"/>

    <Label fx:id="nameLbl" style="-fx-font-size: 22; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>
    <Label fx:id="nameShop" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #555;"/>

    <Line endX="200" stroke="#e0e0e0"/>

    <HBox spacing="16" alignment="CENTER">
        <Label text="Taglia:" style="-fx-font-size: 15; -fx-text-fill: #555; -fx-font-weight: bold;"/>
        <ComboBox fx:id="sizeCombo"
                  style="-fx-background-color: white;
                 -fx-background-radius: 12;
                 -fx-border-color: #d32f2f;
                 -fx-border-width: 2;
                 -fx-border-radius: 12;
                 -fx-padding: 2 8;
                 -fx-font-size: 14;
                 -fx-font-weight: bold;
                 -fx-text-fill: #555;"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Label text="Disponibilità:" style="-fx-text-fill: #555; -fx-font-size: 15; -fx-font-weight: bold"/>
        <Label fx:id="stockLabel" text="—"
               style="-fx-text-fill: #555; -fx-font-size: 15; -fx-font-weight: bold"/>

        <Label text="Quantità:" style="-fx-text-fill: #555; -fx-font-size: 15; -fx-font-weight: bold"/>
        <Spinner fx:id="qtySpinner" prefWidth="100" editable="true"
                 style="-fx-text-fill: #555; -fx-font-size: 15; -fx-font-weight: bold"/>
    </HBox>

    <Label fx:id="priceLbl" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>

    <VBox spacing="16" alignment="CENTER">
        <!-- riga con Carrello + Preferiti -->
        <HBox spacing="16" alignment="CENTER">
            <Button fx:id="addToCartBtn"
                    text="🛒  Carrello"
                    onAction="#onAddToCart"
                    style="-fx-font-size: 15; -fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 7 20;"/>
            <Button fx:id="addToWishListBtn"
                    text="🌟  Preferiti"
                    onAction="#addToWishList"
                    style="-fx-font-size: 15; -fx-background-color: white; -fx-text-fill: #d32f2f; -fx-font-weight: bold; -fx-background-radius: 12; -fx-border-radius: 12; -fx-border-color: #d32f2f; -fx-border-width: 2; -fx-padding: 7 20;"/>
        </HBox>

        <Button fx:id="addReview"
                text="🗨  Recensioni"
                onAction="#onAddReview"
                style="-fx-font-size: 15; -fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 12; -fx-padding: 7 20;"/>

    </VBox>

</VBox>
