<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.PurchaseHistoryController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: #faf6f6;">

    <VBox alignment="TOP_CENTER" spacing="15"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
          style="-fx-padding: 28 28 24 28;">

        <!-- Header card -->
        <StackPane style="-fx-background-color: white; -fx-background-radius: 20;
                          -fx-effect: dropshadow(gaussian, rgba(211,47,47,0.12), 18, 0.18, 0, 6);">
            <HBox alignment="CENTER" spacing="5" style="-fx-padding: 18 18 16 18;">
                <Label text="Cronologia Acquisti"
                       textAlignment="CENTER"
                       style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>
            </HBox>
        </StackPane>

        <!-- Card ORDINI -->
        <StackPane style="-fx-background-color: white; -fx-background-radius: 20;
                          -fx-effect: dropshadow(gaussian, rgba(211,47,47,0.14), 22, 0.18, 0, 8);">
            <VBox spacing="10" style="-fx-padding: 22 20 18 20;">
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Ordini"
                           style="-fx-text-fill: #d32f2f; -fx-font-size: 20; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <TableView fx:id="ordersTable"
                           prefHeight="220"
                           style="-fx-background-color: transparent; -fx-background-insets: 0;
                                  -fx-control-inner-background: white; -fx-background-radius: 16;">

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="colOrderId" text="ID" prefWidth="90"/>
                        <TableColumn fx:id="colOrderDate" text="Data" prefWidth="220"/>
                        <TableColumn fx:id="colOrderStatus" text="Stato" prefWidth="200"/>
                        <TableColumn fx:id="colOrderTotal" text="Totale (€)" prefWidth="160"/>
                    </columns>
                    <stylesheets>
                        <URL value="@/css/style.css"/>
                    </stylesheets>
                </TableView>
            </VBox>
        </StackPane>

        <!-- Card DETTAGLIO -->
        <StackPane style="-fx-background-color: white; -fx-background-radius: 20;
                          -fx-effect: dropshadow(gaussian, rgba(211,47,47,0.14), 22, 0.18, 0, 8);">
            <VBox spacing="10" style="-fx-padding: 22 20 18 20;">
                <HBox alignment="CENTER_LEFT" spacing="5">
                    <Label text="Dettaglio ordine"
                           style="-fx-text-fill: #d32f2f; -fx-font-size: 20; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                </HBox>

                <TableView fx:id="itemsTable"
                           prefHeight="220"
                           style="-fx-background-color: transparent; -fx-background-insets: 0;
                                  -fx-control-inner-background: white; -fx-background-radius: 16;">

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>

                    <columns>
                        <TableColumn fx:id="colItemName" text="Articolo" prefWidth="340"/>
                        <TableColumn fx:id="colItemSize" text="Taglia" minWidth="70" maxWidth="120"/>
                        <TableColumn fx:id="colItemShop" text="Negozio" prefWidth="200"/>
                        <TableColumn fx:id="colItemQty" text="Quantità" minWidth="70" maxWidth="120"/>
                        <TableColumn fx:id="colItemPrice" text="Prezzo (€)" prefWidth="140" minWidth="110"/>
                        <TableColumn fx:id="colItemSubtotal" text="Totale (€)" prefWidth="140" minWidth="110"/>
                    </columns>
                    <stylesheets>
                        <URL value="@/css/style.css"/>
                    </stylesheets>
                </TableView>

                <HBox alignment="CENTER_LEFT" spacing="8" style="-fx-padding: 6 0 0 0;">
                    <Label text="Suggerimento:"
                           style="-fx-text-fill: #d32f2f; -fx-font-weight: bold; -fx-font-size: 12;"/>
                    <Label text="Seleziona un ordine per visualizzare i dettagli degli articoli."
                           style="-fx-text-fill: #777; -fx-font-size: 12;"/>
                </HBox>
            </VBox>
        </StackPane>

        <!-- Pulsanti azione -->
        <HBox alignment="CENTER" spacing="5">
            <Button fx:id="closeButton" text="Chiudi" minWidth="180" onAction="#onClose"
                    style="-fx-background-color: white; -fx-border-color: #d32f2f; -fx-border-width: 2;
                           -fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #d32f2f;
                           -fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 8 18;"/>
        </HBox>

    </VBox>
</AnchorPane>
