<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.controllers.ListReviewController"
            prefWidth="560" prefHeight="520"
            style="-fx-background-color: #faf6f6;">

    <VBox alignment="TOP_CENTER" spacing="18"
          AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
          style="-fx-padding: 22;">

        <!-- Header -->
        <StackPane style="-fx-background-color: white; -fx-background-radius: 16;
                          -fx-effect: dropshadow(gaussian, rgba(211,47,47,0.12), 18, 0.18, 0, 6);">
            <VBox spacing="6" alignment="CENTER_LEFT" style="-fx-padding: 16 18;">
                <Label fx:id="productTitle"
                       style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #d32f2f;"/>
                <HBox spacing="8" alignment="CENTER_LEFT">
                    <Label fx:id="avgLabel" style="-fx-text-fill:#333; -fx-font-size: 13;"/>
                    <Label fx:id="countLabel" style="-fx-text-fill:#777; -fx-font-size: 13;"/>
                </HBox>
            </VBox>
        </StackPane>

        <!-- Lista recensioni -->
        <StackPane style="-fx-background-color: white; -fx-background-radius: 16;
                          -fx-effect: dropshadow(gaussian, rgba(211,47,47,0.14), 22, 0.18, 0, 8);">
            <VBox spacing="10" style="-fx-padding: 16;">
                <ProgressIndicator fx:id="progress" visible="false" prefWidth="24" prefHeight="24"
                                   StackPane.alignment="CENTER"/>

                <ScrollPane fitToWidth="true" prefHeight="360"
                            style="-fx-background-color: transparent; -fx-background-insets: 0;">
                    <VBox fx:id="reviewsBox" spacing="10"/>
                </ScrollPane>
            </VBox>
        </StackPane>

        <!-- Azioni -->
        <HBox spacing="14" alignment="CENTER">
            <Button fx:id="closeBtn" text="Chiudi" onAction="#onClose" minWidth="140"
                    style="-fx-background-color: white; -fx-border-color: #d32f2f; -fx-border-width: 2;
                           -fx-font-weight: bold; -fx-text-fill: #d32f2f; -fx-background-radius: 14; -fx-border-radius: 14; -fx-padding: 8 18;"/>
            <Button fx:id="addBtn" text="Aggiungi recensione" onAction="#onAdd" minWidth="200"
                    style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 14; -fx-padding: 9 20;"/>
        </HBox>

    </VBox>
</AnchorPane>
