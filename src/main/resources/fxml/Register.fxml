<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="org.example.controllers.RegisterController"
           style="-fx-background-color: linear-gradient(to bottom, #f7f9fb, #f0f4f8);
                  -fx-padding: 28;">
    <!-- Card centrale -->
    <VBox alignment="CENTER" spacing="18" maxWidth="560">
        <!-- Titolo pagina -->
        <Text text="Registrazione"
              style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #d32f2f;"/>

        <!-- Card con i campi -->
        <GridPane hgap="12" vgap="12" maxWidth="560"
                  style="
                      -fx-background-color: white;
                      -fx-background-radius: 16;
                      -fx-border-color: #d32f2f;
                      -fx-border-width: 2;
                      -fx-border-radius: 16;
                      -fx-effect: dropshadow(gaussian, rgba(211,47,47,0.16), 18, 0.18, 0, 6);
                  ">
            <padding>
                <Insets top="22" right="22" bottom="22" left="22"/>
            </padding>

            <!-- Colonne: etichette a destra, campi che crescono -->
            <columnConstraints>
                <ColumnConstraints minWidth="150" halignment="RIGHT"/>
                <ColumnConstraints hgrow="ALWAYS" minWidth="280"/>
            </columnConstraints>

            <!-- Riga: titolo card interno -->
            <Label text="Crea il tuo account"
                   GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #d32f2f; -fx-alignment: center"
                   maxWidth="Infinity" GridPane.halignment="CENTER"/>

            <Separator GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

            <!-- Username -->
            <Label text="Username:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                   style="-fx-font-size: 14; -fx-text-fill: #555; -fx-font-weight: bold;"/>
            <TextField fx:id="usernameField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                       promptText="Inserisci username"
                       style="
                           -fx-background-color: #fafafa;
                           -fx-background-radius: 10;
                           -fx-border-color: #e6bcbc;
                           -fx-border-width: 1.2;
                           -fx-border-radius: 10;
                           -fx-padding: 8 10;
                           -fx-text-fill: #333;
                       "/>

            <!-- Password -->
            <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"
                   style="-fx-font-size: 14; -fx-text-fill: #555; -fx-font-weight: bold;"/>
            <PasswordField fx:id="passwordField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                           promptText="Inserisci password"
                           style="
                               -fx-background-color: #fafafa;
                               -fx-background-radius: 10;
                               -fx-border-color: #e6bcbc;
                               -fx-border-width: 1.2;
                               -fx-border-radius: 10;
                               -fx-padding: 8 10;
                               -fx-text-fill: #333;
                           "/>

            <!-- Conferma Password -->
            <Label text="Conferma Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                   style="-fx-font-size: 14; -fx-text-fill: #555; -fx-font-weight: bold;"/>
            <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="4" GridPane.columnIndex="1"
                           promptText="Ripeti password"
                           style="
                               -fx-background-color: #fafafa;
                               -fx-background-radius: 10;
                               -fx-border-color: #e6bcbc;
                               -fx-border-width: 1.2;
                               -fx-border-radius: 10;
                               -fx-padding: 8 10;
                               -fx-text-fill: #333;
                           "/>

            <!-- Email -->
            <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                   style="-fx-font-size: 14; -fx-text-fill: #555; -fx-font-weight: bold;"/>
            <TextField fx:id="emailField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                       promptText="nome@dominio.it"
                       style="
                           -fx-background-color: #fafafa;
                           -fx-background-radius: 10;
                           -fx-border-color: #e6bcbc;
                           -fx-border-width: 1.2;
                           -fx-border-radius: 10;
                           -fx-padding: 8 10;
                           -fx-text-fill: #333;
                       "/>

            <!-- Telefono -->
            <Label text="Telefono:" GridPane.rowIndex="6" GridPane.columnIndex="0"
                   style="-fx-font-size: 14; -fx-text-fill: #555; -fx-font-weight: bold;"/>
            <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1"
                       promptText="es. 3331234567"
                       style="
                           -fx-background-color: #fafafa;
                           -fx-background-radius: 10;
                           -fx-border-color: #e6bcbc;
                           -fx-border-width: 1.2;
                           -fx-border-radius: 10;
                           -fx-padding: 8 10;
                           -fx-text-fill: #333;
                       "/>

            <!-- Bottoni Registrati e Indietro -->
            <HBox spacing="16" alignment="CENTER"
                  GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2">
                <Button text="Indietro" onAction="#onBack"
                        style="
                -fx-background-color: white;
                -fx-text-fill: #d32f2f;
                -fx-font-weight: bold;
                -fx-font-size: 15px;
                -fx-background-radius: 12;
                -fx-border-color: #d32f2f;
                -fx-border-radius: 12;
                -fx-border-width: 2;
                -fx-padding: 9 24;
                -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 8, 0.2, 0, 2);
            "/>
                <Button text="Registrati" onAction="#onRegister"
                        style="
                -fx-background-color: #d32f2f;
                -fx-text-fill: white;
                -fx-font-weight: bold;
                -fx-font-size: 15px;
                -fx-background-radius: 12;
                -fx-padding: 9 24;
                -fx-effect: dropshadow(gaussian, rgba(211,47,47,0.18), 12, 0.25, 0, 3);
            "/>
            </HBox>

        </GridPane>

        <!-- Nota piccola (facoltativa) -->
        <Label text="Confermi di accettare i termini e lâ€™informativa privacy."
               style="-fx-text-fill: #888; -fx-font-size: 11;"/>
    </VBox>
</StackPane>
